{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es7"],
    "paths": {
      "@afflr/message-queue": ["./packages/message-queue"],
    }
  },
  "include": ["packages/**/*", "apps/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}